{
  "extends": "@fitness-league/tsconfig/react.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@fitness-league/shared": ["../../packages/shared/src"],
      "@fitness-league/ui": ["../../packages/ui/src"],
      "@fitness-league/env": ["../../packages/env/src"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*", "src/**/__tests__/**", "src/**/__mocks__/**"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
