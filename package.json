{
  "name": "fitness-league",
  "version": "0.1.0",
  "private": true,
  "description": "A gamified fitness tracking web app with personalized workout plans",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:full": "cd apps/web && pnpm dev:full",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "storybook": "turbo run storybook",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@fitness-league/docs && changeset publish",
    "setup": "./scripts/setup-dev.sh",
    "seed": "./scripts/seed-emulator.sh",
    "deploy": "pnpm build && firebase deploy"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.4.2",
    "turbo": "^2.5.8"
  },
  "dependencies": {
    "react-hot-toast": "^2.6.0"
  }
}