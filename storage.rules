rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User avatars - only the user can upload/delete their own avatar
    match /avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User workout media - only the user can upload/delete their own media
    match /workouts/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public assets - read-only for authenticated users
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Public assets are read-only
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
